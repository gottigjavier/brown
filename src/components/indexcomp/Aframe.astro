<a-scene
  environment
  cursor="rayOrigin: mouse; fuse: false" 
  raycaster="objects: .raycastable"
 >
  <a-assets>
    
    <img src="/backgrounds/cascada360.avif" id="sky" />
    <img src="/icons/jorgeflynat.png" id="logo-nat" />
             
  </a-assets>
  
  <a-sky src="#sky" rotation="0 -85 0" position="-10 -175 0"></a-sky>
  
  <a-curvedimage
    id="alogo-nat"
    src="#logo-nat"
    width="30"
    height="25"
    radius="150"
    theta-length="80"
    position="18 -0.3 0"
    rotation="0 140 0"
    scale="1 5 1"
    opacity="1"
  >
</a-curvedimage>

  <!-- Hand controls -->
  <a-entity id="leftHand" laser-controls="hand: left" raycaster="objects: .raycastable"></a-entity>
  <a-entity id="rightHand" laser-controls="hand: right" raycaster="objects: .raycastable" line="color: #118A7E"></a-entity>
  
</a-scene>


<style>
  a-scene {
    width: 100dvw;
    height: 100dvh;
  }

  #logo-nat {
    justify-self: center;
  }
</style>
