<a-scene
  environment
  cursor="rayOrigin: mouse; fuse: false" 
  raycaster="objects: .raycastable"
 >
  <a-assets>
    <img src="/backgrounds/cascada360.avif" id="sky" />
    <img src="/icons/jorgeflynat.png" id="logo-nat" />
    <img src="/icons/ingresar-btn.png" id="ingresar-btn" />
    <img src="/backgrounds/obelisco.avif" id="obelisco" />
    <img src="/backgrounds/ave.avif" id="ave" />
    <img src="/backgrounds/dunas.avif" id="dunas" />

        
        <a-mixin
          id="frame-left"
          geometry="primitive: box; width: 25; height: 5"
          material="color: white; shader: flat; opacity: 0"
          animation__scale="property: scale; to: 8 5 5; dur: 200; startEvents: mouseenter"
          animation__scale_reverse="property: scale; to: 1 1 1; dur: 200; startEvents: mouseleave"
          animation__position="property: position; to: 0 -11 0; dur: 200; startEvents: mouseenter"
          animation__position_reverse="property: position; to: -35 -15 0; dur: 200; startEvents: mouseleave"
         ></a-mixin>
         <a-mixin
          id="frame-central"
          geometry="primitive: box; width: 25; height: 5"
          material="color: white; shader: flat; opacity: 0"
          animation__scale="property: scale; to: 8 5 5; dur: 200; startEvents: mouseenter"
          animation__scale_reverse="property: scale; to: 1 1 1; dur: 200; startEvents: mouseleave"
          animation__position="property: position; to: 0 -11 0; dur: 200; startEvents: mouseenter"
          animation__position_reverse="property: position; to: 0 -15 0; dur: 200; startEvents: mouseleave"
         ></a-mixin>
         <a-mixin
          id="frame-right"
          geometry="primitive: box; width: 25; height: 5"
          material="color: white; shader: flat; opacity: 0"
          animation__scale="property: scale; to: 8 5 5; dur: 200; startEvents: mouseenter"
          animation__scale_reverse="property: scale; to: 1 1 1; dur: 200; startEvents: mouseleave"
          animation__position="property: position; to: 0 -11 0; dur: 200; startEvents: mouseenter"
          animation__position_reverse="property: position; to: 35 -15 0; dur: 200; startEvents: mouseleave"
         ></a-mixin>
         <a-mixin
          id="poster-left"
          geometry="primitive: box; width: 25; height: 5; depth: 1"
          material="color: white; shader: flat"
          position="0 8 1"
         ></a-mixin>
         <a-mixin
          id="poster-central"
          geometry="primitive: box; width: 25; height: 5; depth: 10"
          material="color: white; shader: flat"
          position="0 8 1"
         ></a-mixin>
         <a-mixin
          id="poster-right"
          geometry="primitive: box; width: 25; height: 5; depth: 10"
          material="color: white; shader: flat"
          position="0 8 1"
         ></a-mixin>
         <a-mixin
          id="movieImage"
          geometry="primitive: box; width: 25; height: 20"
          material="src: #ponyo; shader: flat; transparent: false"
          position="0 8 2"
         ></a-mixin>
         
  </a-assets>
  <a-sky src="#sky" rotation="0 -90 0" position="-10 -165 0"></a-sky>
  <a-curvedimage
    id="alogo-nat"
    src="#logo-nat"
    width="30"
    height="25"
    radius="150"
    theta-length="80"
    position="18 1 28"
    rotation="0 138 0"
    scale="1 5 1"
    opacity="1"
  >
</a-curvedimage>

  <!-- Hand controls -->
  <a-entity id="leftHand" laser-controls="hand: left" raycaster="objects: .raycastable"></a-entity>
  <a-entity id="rightHand" laser-controls="hand: right" raycaster="objects: .raycastable" line="color: #118A7E"></a-entity>
  
  <a-curvedimage
  id="ui"
  width="5"
  height="10"
  radius="20"
  theta-length="10"
  position="2.5 55 -95"
  rotation="0 0 0"
  scale="1 5 1"
  opacity="0"
>
    <!-- Poster menu -->
    <a-entity id="menu" highlight>
      <a-entity id="myave" position="-35 -15 0" mixin="frame-left" class="raycastable menu-button">
        <a-entity material="src: #ave;" mixin="poster-left" scale="1 1 1" position="0 0 1">
        </a-entity>
      </a-entity>

      <a-entity id="myobelisco" position="0 -15 0" mixin="frame-central" class="raycastable menu-button">
        <a-entity material="src: #obelisco" mixin="poster-central" scale="1 1 0.1" position="0 0 1">
        </a-entity>
      </a-entity>

      <a-entity id="mydunas" position="35 -15 0" mixin="frame-right" class="raycastable menu-button">
        <a-entity material="src: #dunas" mixin="poster-right" scale="1 1 0.1" position="0 0 1">
        </a-entity>
      </a-entity>
  </a-entity>
    
    
  </a-curvedimage>
</a-scene>


<style>
  a-scene {
    width: 100dvw;
    height: 100dvh;
  }

  #logo-nat {
    justify-self: center;
  }
</style>
