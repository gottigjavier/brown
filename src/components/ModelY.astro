---
import Section from "./Section.astro"
---

<Section
  color="white"
  id="model-y"
>
  
  <img
    slot="background"
    alt="Model Y"
    class="h-full w-full object-cover object-center bg-image"
    src="brown1.jpg"
    id="bg-image-modely"
  />
</Section>

<script>
  function isEdge() {
    if (
      navigator.userAgent.indexOf("Edge") > -1 ||
      navigator.userAgent.indexOf("Edg") > -1
    ) {
      return true
    } else {
      return false
    }
  }

  let imageElement = document.querySelector(
    "#bg-image-modely"
  ) as HTMLImageElement

  if (isEdge()) {
    imageElement.src = "brown1.jpg"
  } else {
    imageElement.src = "brown1.jpg"
  }
</script>
