---
import Section from "./Section.astro";
---

<Section
  id="model-s"
>
  
  <img
    slot="background"
    alt="Model S"
    class="h-full w-full object-cover object-center"
    src="brown2.jpg" 
    id="bg-image-models"
  />
</Section>

<script>
  function isEdge() {
    if (
      navigator.userAgent.indexOf("Edge") > -1 ||
      navigator.userAgent.indexOf("Edg") > -1
    ) {
      return true;
    } else {
      return false;
    }
  }

  let imageElement = document.querySelector("#bg-image-models") as HTMLImageElement; // TypeScript

  if (isEdge()) {
    imageElement.src = "brown2.jpg";
  } else {
    imageElement.src = "brown2.jpg";
  }
</script>
