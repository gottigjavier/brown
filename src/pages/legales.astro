<style>
    .container-background {
        position: relative;
        border-radius: 2%;
        margin: 1vh 3vw 0 10vw;
        max-width: 80vw;
        z-index: 1;
    }

    .legal-title {
        font-size: x-large;
        text-align: center;
        margin: 2% 0 1% 0;
    }

    .legal-text {
        margin: 1% 0;
        text-wrap:pretty;
    }
    
    footer {
        bottom: 0;
